<h2>Sukurti</h2>

<div class="border container" style="padding:30px">
	<form method="post">
		<div class="form-group row">
			<div class="col-4">
				<label asp-for="Note.Title">Pavadinimas</label>
			</div>
			<div class="col-4">
				<input asp-for="Note.Title" class="form-control"/>
			</div>

			<div class="form-group row mt-4">
			<div class="col-4">
				<label asp-for="Note.Content">Tekstas</label>
			</div>
			<div class="col-4">
				<input asp-for="Note.Content" class="form-control"/>
			</div>

		</div>
		<div class="form-group row mt-4">
			<div class="col-3 offset-4">
				<input type="submit" value="Sukurti" class="btn btn-primary"/>
			</div>
			<div class="col-3">
				<a asp-page="Index" class="btn btn-success">Atgal</a>
			</div>
		</div>
	</form>
</div>